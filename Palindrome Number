class Solution {
    public boolean isPalindrome(int x) {
        // Negative numbers are not palindromes
        if (x < 0) return false;

        int original = x;
        int pel = 0;

        while (x > 0) {
            pel = pel * 10 + (x % 10);
            x = x / 10;
        }

        return pel == original;
    }
}
